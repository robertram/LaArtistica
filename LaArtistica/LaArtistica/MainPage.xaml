<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LaArtistica.MainPage">

    <StackLayout>
        <Label Text="Usuario"/>
        <Entry Placeholder="Digite su usuario" x:Name="username"/>
        <Label Text="Contraseña"/>
        <Entry Placeholder="Digite su contraseña" x:Name="password"/>
        <Button Text="Ingresar" x:Name="btnIngresar"/>
        <Button Text="Registrase" x:Name="btnRegristrarse"/>
    </StackLayout>

</ContentPage>
